<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <title>Sparks Foundation Bank</title>
    <style>
        body{
            background-image: url('images/bg1.jpg');
        }
        .container{
        color: rgba(223, 10, 35, 0.582);
        width: 700px;
        position: absolute;
        left: 50%;
        top: 60%;
        transform: translate(-50%, -50%);
        padding: 10px;
        border: 2px solid whitesmoke;
      }
    </style>
</head>
<body>
    <!-- /navbar -->
    <nav class="navbar navbar-light" style="background-color: antiquewhite;">
      <a class="navbar-brand" href="#">Welcome to Sparks Foundation Bank</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-expand-lg navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/"><b>Home</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/customer"><b>All Customers</b></a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/transfer"><b>Transfer Money</b></a>
          </li>
        </ul>
      </div>
    </nav>


      <div class="container">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr class="table-info">
                            <th scope="col">Sr.No.</th>
                            <th scope="col">Account No.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Balance</th>
                            <th scope="col">E-mail Id</th>
                            <th scope="col">ContactNo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                            if(customerData.length!=0){
                            var i=1;
                            customerData.forEach(function(data){
                        %>        
                        <tr class="table-light">
                            <td scope="row"><%=i %></td>
                            <td><%=data.AccountNo %></td>
                            <td><%=data.Name %></td>
                            <td><%=data.Balance %></td>
                            <td><%=data.Email %></td>
                            <td><%=data.ContactNo %></td>
                        </tr>
                        <% i++; }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
</body>
</html>